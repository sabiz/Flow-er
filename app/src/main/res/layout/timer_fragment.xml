<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="timer" type="jp.sabiz.flow_er.viewmodel.TimerViewModel"/>

        <import type="jp.sabiz.flow_er.fragment.TimerFragment.State"/>
        <import type="android.view.View"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorPrimary"
        android:keepScreenOn="true">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="@{timer.progress.floatValue()}" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_button_start_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.2" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_button_start_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.8" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_button_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.8" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_text_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.1" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_text_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.5" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_text_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.7" />

        <View
            android:id="@+id/progress_area"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="?attr/colorSecondary"
            app:layout_constraintBottom_toTopOf="@+id/guideline_progress"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="16dp"
            android:text="Settings"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="?attr/colorOnPrimary"
            android:visibility="@{timer.state == State.STAND_BY ? View.VISIBLE : View.INVISIBLE}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_start"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button_start"
            android:fontFamily="monospace"
            android:text="START"
            android:textAppearance="@style/Style.Text.Big"
            android:visibility="@{timer.state != State.RUNNING ? View.VISIBLE : View.INVISIBLE}"
            app:backgroundTint="@null"
            app:layout_constraintBottom_toBottomOf="@id/guideline_button_center"
            app:layout_constraintEnd_toStartOf="@+id/guideline_button_start_8"
            app:layout_constraintStart_toStartOf="@+id/guideline_button_start_2"
            app:layout_constraintTop_toTopOf="@id/guideline_button_center"
            tools:ignore="DuplicateClickableBoundsCheck" />

        <Button
            android:id="@+id/button_pause"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button_pause"
            android:fontFamily="monospace"
            android:text="PAUSE"
            android:textAppearance="@style/Style.Text.Big"
            android:textColor="@color/primary_blue_green_on"
            android:visibility="@{timer.state == State.RUNNING ? View.VISIBLE : View.INVISIBLE}"
            app:backgroundTint="@null"
            app:layout_constraintBottom_toBottomOf="@id/guideline_button_center"
            app:layout_constraintEnd_toStartOf="@+id/guideline_button_start_8"
            app:layout_constraintStart_toStartOf="@+id/guideline_button_start_2"
            app:layout_constraintTop_toTopOf="@id/guideline_button_center" />

        <Button
            android:id="@+id/button_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="monospace"
            android:text="RESET"
            android:background="@drawable/bg_button_reset"
            android:textColor="?attr/colorOnPrimary"
            android:visibility="@{timer.state != State.STAND_BY ? View.VISIBLE : View.INVISIBLE}"
            app:backgroundTint="@null"
            app:layout_constraintEnd_toStartOf="@+id/guideline_button_start_8"
            app:layout_constraintStart_toStartOf="@+id/guideline_button_start_2"
            app:layout_constraintTop_toBottomOf="@+id/button_start" />

        <TextView
            android:id="@+id/text_time_sec"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="1000sp"
            android:gravity="bottom"
            android:text="@{timer.currentSec.toString()}"
            android:textAlignment="center"
            android:textStyle="bold"
            android:visibility="@{timer.state != State.STAND_BY ? View.VISIBLE : View.INVISIBLE}"
            android:maxLines="1"
            app:layout_constraintBottom_toTopOf="@+id/guideline_text_5"
            app:layout_constraintEnd_toEndOf="@+id/guideline_button_start_8"
            app:layout_constraintStart_toStartOf="@+id/guideline_button_start_2"
            app:layout_constraintTop_toTopOf="@+id/guideline_text_1"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/text_time_min"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="1000sp"
            android:text="@{timer.currentMin.toString()}"
            android:textAlignment="center"
            android:visibility="@{timer.state != State.STAND_BY ? View.VISIBLE : View.INVISIBLE}"
            android:maxLines="1"
            app:layout_constraintBottom_toTopOf="@+id/guideline_text_7"
            app:layout_constraintEnd_toStartOf="@+id/guideline_button_start_8"
            app:layout_constraintStart_toStartOf="@+id/guideline_button_start_2"
            app:layout_constraintTop_toTopOf="@+id/guideline_text_5" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>